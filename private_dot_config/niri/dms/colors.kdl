layout {
    background-color "transparent"

    focus-ring {
        active-color   "#a0c9ff"
        inactive-color "#8c919b"
        urgent-color   "#ffb4ab"
    }

    border {
        active-color   "#a0c9ff"
        inactive-color "#8c919b"
        urgent-color   "#ffb4ab"
    }

    shadow {
        color "#00000070"
    }

    tab-indicator {
        active-color   "#a0c9ff"
        inactive-color "#8c919b"
        urgent-color   "#ffb4ab"
    }

    insert-hint {
        color "#a0c9ff80"
    }
}

recent-windows {
    highlight {
        active-color   "#5e94d3"
        urgent-color   "#ffb4ab"
    }
}
